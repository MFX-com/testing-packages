{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "2.0.5",
  "packages": [
    "packages/*"
  ],
  "changelogPreset": {
    "name": "angular"
  },
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version and release commit",
      "allowBranch": [
        "main",
        "staging",
        "development"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/*(\\.|-)test.ts",
        "lerna.json",
        "package.json",
        "Dockerfile"
      ]
    }
  }
}
