{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version and release commit",
      "allowBranch": "main",
      "ignoreChanges": [
        "**/*.md",
        "**/*(\\.|-)test.ts"
      ]
    }
  }
}
