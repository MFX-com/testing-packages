{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "5.1.4",
  "packages": [
    "."
  ],
  "changelogPreset": {
    "name": "angular"
  },
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version and release commit [skip actions]",
      "allowBranch": [
        "main"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/*(\\.|-)test.ts",
        "lerna.json",
        "package.json",
        "Dockerfile"
      ]
    }
  }
}
