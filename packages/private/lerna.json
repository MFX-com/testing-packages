{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.5.0",
  "packages": [
    "src"
  ],
  "changelogPreset": {
    "name": "angular"
  },
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version and release commit",
      "allowBranch": ["main"],
      "ignoreChanges": [
        "**/*.md",
        "**/*(\\.|-)test.ts"
      ]
    }
  }
}
